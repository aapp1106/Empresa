@model IEnumerable<Empresa.Models.Ventas>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <span>Nombre Completo</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Productos.Nombre_Producto)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Cantidad_Vendida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor_Producto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_venta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor_Total_Ventas)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <span>@item.Vendedor.Nombres_V @item.Vendedor.Apellidos_V</span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Productos.Nombre_Producto)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Cantidad_Vendida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Valor_Producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_venta)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Valor_Total_Ventas)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id_Ventas }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id_Ventas }, new { @class = "VEliminar" })
        </td>
    </tr>
}

</table>

@section scripts{
    <script>
        $(".VEliminar").click(function (event) {
            if (!confirm('Esta seguro que desea eliminar la venta?')) {
                event.preventDefault();
            }
        });
    </script>

}